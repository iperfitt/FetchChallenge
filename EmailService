package com.ianperfitt.Controllers;

import java.util.ArrayList;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@CrossOrigin(origins = "http://localhost:4200")
public class FetchController {

	// helper function to remove periods
	// and all characters after '+' character
	public static ArrayList<String> stripEmails(ArrayList<String> emails) {

		for (int i = 0; i < emails.size(); i++) {
			if (emails.get(i).contains(".")) {
				String newString = emails.get(i).replace(".", "");
				emails.remove(i);
				emails.add(newString);
			}
			if (emails.get(i).contains("+")) {
				String result = emails.get(i);
				result = result.split("+")[0];
				emails.remove(i);
				emails.add(result);

			}
		}
		return emails;
	}

	@RequestMapping("/fetch")
	public static int uniqueEmailCount(@RequestBody ArrayList<String> emails) {
		ArrayList<String> emails2 = stripEmails(emails);
		ArrayList<String> temp = emails2;
		int unique_num = 0;
		for (int i = 0; i < emails2.size(); i++) {
			for (int j = 0; j < emails2.size(); j++) {
				if (emails2.get(i).equals(temp.get(i))) {
					++unique_num;
				}

			}
		}
		return unique_num;
	}

}
